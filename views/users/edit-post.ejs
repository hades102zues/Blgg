<%- include('../includes/head.ejs') %>
	
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/new-post.css">
</head>
<body>
	<%- include('../includes/navigation.ejs') %>

<main>
	<div class="container">
	<%for(let post of userPost){ %>
		<div class="new-post">
			
			  <header>
				<h3>Edit Post</h3>
			  </header>

		<form action="/user/posts/edit-post/<%=post.postid%>" method="POST">
			  	<div class="form-control">
			  		<label for="title">Title</label>
			  		<input type="text" name="title" id="title"
			  		 value="<%=post.title%>" />
			  	</div>

			  	<div class="form-control">
			  		<label for="image">ImageUrl</label>
			  		<input type="text" name="imageurl" id="image" 
			  		  value="<%=post.imageurl%>" />
			  	</div>

			  	<div class="form-control">
			  		<label for="content">Content</label>
			  		<textarea name="description" id="content" rows="4" cols="50" 
			  		><%=post.description%></textarea/>
			  	
			  	</div>		  
			  	<button type="submit">Done</button>
		</form>

		  </div>

	<%}%>
	</div>	  
</main>

<%- include('../includes/end.ejs') %>